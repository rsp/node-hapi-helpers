{
  "name": "hapi-helpers",
  "version": "0.0.0",
  "description": "Some helper functions for hapi.js",
  "main": "index.js",
  "scripts": {
    "test-mocha": "mocha",
    "test": "npm run check-coverage",
    "coverage": "istanbul cover _mocha test --recursive -- -u exports -R spec",
    "check-coverage": "istanbul cover _mocha test --recursive && istanbul check-coverage --statement 100",
    "test-on-travis": "./node_modules/.bin/istanbul cover --report lcovonly ./node_modules/.bin/_mocha && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rsp/node-hapi-helpers.git"
  },
  "keywords": [
    "hapi"
  ],
  "author": {
    "name": "Rafa≈Ç Pocztarski",
    "email": "r.pocztarski@gmail.com",
    "url": "https://rsp.github.io/"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rsp/node-hapi-helpers/issues"
  },
  "homepage": "https://github.com/rsp/node-hapi-helpers",
  "devDependencies": {
    "chai": "^2.2.0",
    "coveralls": "^2.11.2",
    "istanbul": "^0.3.13",
    "mocha": "^2.2.4"
  }
}
